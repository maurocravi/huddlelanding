---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Huddle">
<main class=" text-white font-poppins">

<!-- 	<img class=" h-full absolute" src="bg-desktop.svg" alt="background image"> -->

	<section>

		

		<header class=" flex w-full lg:justify-start justify-center absolute top-0 lg:px-20 2xl:px-72 py-5">
			<img src="logo.svg" alt="logo" class=" w-44 lg:w-56 ">
		</header>



		<section class=" lg:space-x-10 lg:px-20 lg:absolute z-10 flex flex-col lg:flex-row w-full justify-center items-center mt-24 lg:mt-40 ">
			<div class=" lg:w-[700px] w-[300px]">

				<img src="illustration-mockups.svg" alt="illustration mockup" class="">

			</div>



			<div class=" lg:w-[600px] px-5 text-center space-y-5 lg:space-y-10 mt-10">

				<h1 class=" text-2xl lg:text-6xl font-medium">Build The Community Your Fans Will Love</h1>
				<p class=" ">Huddle re-imagines the way we build communities. You have a voice, but so does your audience. 
					Create connections with your users as you engage in genuine discussion. </p>
					
				<button class="bg-white hover:text-white  lg:px-14 lg:py-4 px-10 py-2 rounded-full shadow-xl text-[#674baf] hover:bg-[#e882e8] transition-all duration-300">Register</button>

			</div>
		</section>







		<footer class=" flex w-full md:absolute bottom-0 py-5 justify-center lg:justify-end  lg:px-32 2xl:px-72 lg:space-x-5 space-x-4 items-center">


				<a class=" border p-2 rounded-full hover:border-[#e882e8] transition-all duration-300 group" href="">
